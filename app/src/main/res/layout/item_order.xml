<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    app:ignore="NamespaceTypo">


    <LinearLayout
        android:id="@+id/lvl_itemclick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_rtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Tititi"
                android:textColor="@color/black1"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_delivery"
                style="@style/Font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:drawableRight="@drawable/ic_green_mark"
                android:drawablePadding="4dp"
                android:gravity="right|center"
                android:paddingLeft="5dp"
                android:text="Delivery"
                android:textColor="@color/black1"
                android:textSize="14dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_location"
            style="@style/Font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Location"
            android:textColor="@color/black1"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_totoal"
            style="@style/Font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:text="$254"
            android:textColor="@color/black1"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layerType="software"
            android:src="@drawable/dotted" />

        <TextView
            android:id="@+id/txt_ptitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="kasar pista 32.kg"

            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_dates"
            style="@style/Font"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="june 2021 17 10:20"
            android:textSize="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/txt_trackorder"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:background="@color/colorPrimary"
                android:backgroundTint="@color/colorPrimary"
                android:gravity="center"
                android:text="TRACK ORDER"
                android:textColor="@color/white"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt_orderrates"
                android:layout_width="150dp"
                android:layout_height="34dp"
                android:background="@drawable/box_rate"
                android:gravity="center"
                android:text="RATE ORDER"
                android:textColor="@color/black"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dtitle"
                    style="@style/Font"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="2dp"
                    android:text="Your rating for Delivery"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_drates"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star"
                    android:drawablePadding="3dp"
                    android:drawableTint="@color/yello"
                    android:text="5  |  love it"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_rrtitle"
                    android:visibility="gone"
                    style="@style/Font"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your rating for Delivery"
                    android:paddingBottom="2dp"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/txt_rrates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_star"
                    android:visibility="gone"
                    android:drawablePadding="3dp"
                    android:drawableTint="@color/yello"
                    android:text="5  |  love it"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black" />
    </LinearLayout>


</LinearLayout>
